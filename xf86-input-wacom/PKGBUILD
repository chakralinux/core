# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=xf86-input-wacom
pkgver=0.10.8
pkgrel=2
pkgdesc="X.Org Wacom tablet driver"
arch=('i686' 'x86_64')
url="http://linuxwacom.sourceforge.net/"
license=('GPL')
backup=('etc/X11/xorg.conf.d/50-wacom.conf')
depends=('libxi')
makedepends=('pkgconfig' 'xorg-server=>1.9.1' 'xorg-util-macros')
conflicts=('xorg-server<1.9.1')
options=(!libtool)
source=(http://downloads.sourceforge.net/project/linuxwacom/${pkgname}/${pkgname}-${pkgver}.tar.bz2
        70-wacom.rules)
md5sums=('e2bcc125070a16a7e3608d074d5d27dc'
         '4d3665bb2ef8a8190734640dffa4c6f7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --with-xorg-conf-dir=/etc/X11/xorg.conf.d
  make
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/lib/udev/rules.d"
  install -m644 "${srcdir}/70-wacom.rules"  "${pkgdir}/lib/udev/rules.d/"
}
