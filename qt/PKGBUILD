## rebuild on icu update

pkgbase=qt
pkgname=('qt' 'qt-private-headers' 'qt-docs')
pkgver=4.8.7
pkgrel=7
arch=('x86_64')
url='http://www.qt.io'
license=('GPL3' 'LGPL')
makedepends=('libtiff' 'libpng' 'libmng' 'sqlite3' 'ca-certificates' 'glib2' 'dbus'
    'fontconfig' 'libgl' 'libsm' 'libxrandr' 'libxv' 'libxi' 'alsa-lib'
