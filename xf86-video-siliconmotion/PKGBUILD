# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>
# maintainer (x86_64): Manuel Tortosa <manutortosa[at]chakra-project[dot]org>

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=xf86-video-siliconmotion
pkgver=1.7.4
pkgrel=3
pkgdesc="X.org siliconmotion video driver"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('glibc')
makedepends=('xorg-server')
conflicts=('xorg-server<1.9.5')
options=('!libtool')
groups=('xorg-video-drivers')
source=(${url}/releases/individual/driver/${pkgname}-${pkgver}.tar.bz2
        http://chakra-project.org/sources/${pkgname}/pixmapPrivate.patch)
sha1sums=('3c0fd42fbd301e66104e4b9190796d102a034787'
          '2832b1e292cc37067b4479d0ecdcb0a28987e2d7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np1 -i ${startdir}/pixmapPrivate.patch || return 1
  ./configure --prefix=/usr
  make
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
