# Maintainer (i686): Phil Miller <philm@chakra-project[dog]org>
# Maintainer (x86_64): Manuel Tortosa <manutortosa@chakra-project@org>

# Include global configuration
source ../frameworks.conf

pkgname=prison-kf5
pkgver=5.25.0.git20160814
_commit=f109d48
pkgrel=1
arch=('x86_64')
pkgdesc="A barcode api to produce QRCode barcodes and DataMatrix barcode"
url="https://projects.kde.org/projects/kdesupport/prison"
license=('GPL' 'LGPL' 'FDL')
makedepends=('cmake' 'extra-cmake-modules')
depends=('qt5-base' 'libdmtx' 'qrencode')
options=('debug')
source=($pkgname-$pkgver::"http://quickgit.kde.org/?p=prison.git&a=snapshot&h=${_commit}&fmt=tgz")
md5sums=('d7f703b53801d88dc913eefb38a39326')

build() {
	msg "starting build ..."
	cd ${srcdir}
	mkdir -p build-qt5
	cd build-qt5

	cmake_kf5 ../prison

	make 
}

package() {
  cd "${srcdir}"/build-qt5
  make DESTDIR="${pkgdir}" install
}
