# Maintainer: FranzMari <franzmari[at]chakra-project[dot]it>
 
pkgname=libnm-qt
pkgver=0.9.0
pkgrel=1
pkgdesc='Qt-only wrapper for NetworkManager DBus API'
arch=('x86_64')
url='https://projects.kde.org/projects/extragear/libs/libnm-qt'
license=('LGPL')
depends=('libmm-qt' 'networkmanager')
makedepends=('cmake')
conflicts=('libnm-qt-git')
source="http://download.kde.org/unstable/networkmanagement/${pkgver}/src/${pkgname}-${pkgver}.tar.xz"
md5sums=('2b812ecef87969cd466e74548c7489ae')
 
build() {
  cd $srcdir/${pkgname}-${pkgver}
  mkdir build
  cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}
 
package() {
  cd $srcdir/${pkgname}-${pkgver}
  cd build
  make DESTDIR="${pkgdir}" install
} 

  
