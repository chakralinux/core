# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=gavl
pkgver=1.1.2
pkgrel=1
pkgdesc="A low level library, upon which multimedia APIs can be built."
arch=('i686' 'x86_64')
url="http://gmerlin.sourceforge.net/"
license=('GPL')
depends=('glibc' 'libpng')
optios=(!libtool)
source=(http://downloads.sourceforge.net/sourceforge/gmerlin/$pkgname-$pkgver.tar.gz libpng-1.4.patch)
md5sums=('4a4e8b661a053c70f6842dc7a80f3d05'
	 'd50270611b9f8cc7423bb685ed60c415')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p0 -i ${srcdir}/libpng-1.4.patch || return 1
  ./configure --prefix=/usr \
        --without-doxygen \
        --with-cpuflags=none
  make || return 1
  make DESTDIR=$pkgdir install
}