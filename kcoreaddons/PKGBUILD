# Contributor : Andrea Scarpino <andrea@archlinux.org>

source ../frameworks.conf

pkgname=kcoreaddons
#pkgver=${KFVersion}
pkgver=5.30.1
pkgrel=1
pkgdesc='Addons to QtCore'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kcoreaddons'
license=('LGPL')
depends=("qt5-base" 'shared-mime-info' 'gamin')
makedepends=("extra-cmake-modules>=${KFECMVersion}" 'qt5-tools')
groups=('kf5')
install=${pkgname}.install
source=("$KFServer/${pkgname}-${pkgver}.tar.xz")
#sha256sums=( $(getSum ${pkgname}))
sha256sums=(cdd29840c23ab3403eadff578a54e33a2c17b357b59e2ef8a8509ed436c33e70)

prepare() {
  mkdir -p build
  cd ${srcdir}/${pkgname}-${pkgver}
}

build() {
  cd build
  cmake_kf5 ../${pkgname}-${pkgver} \
    -D_KDE4_DEFAULT_HOME_POSTFIX=4
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
