# Maintainer: almack <almack@chakraos.org> 

pkgname=serf
pkgver=1.3.9
pkgrel=1
pkgdesc="High-performance asynchronous HTTP client library"
arch=('x86_64')
url="http://serf.apache.org/"
license=('Apache')
depends=('apr-util')
makedepends=('scons')
source=("https://archive.apache.org/dist/serf/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('26015c63e3bbb108c1689bf2090e4c26351db674')

build() {
  cd ${pkgname}-${pkgver}
  scons CFLAGS="${CFLAGS}" \
        LINKFLAGS="${LDFLAGS}" \
        PREFIX=/usr GSSAPI=/usr/bin/krb5-config
}

#check() {
#  cd ${pkgname}-${pkgver}
#  scons check
#}

package() {
  cd ${pkgname}-${pkgver}
  install -d "${pkgdir}/usr"
  scons install --install-sandbox="${pkgdir}"
}
