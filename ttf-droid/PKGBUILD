pkgname=ttf-droid
pkgver=20110417
pkgrel=1
pkgdesc="A font created by Ascender Corporation for use by the Open Handset Alliance platform, Android."
arch=('any')
license=('apache')
url="http://code.google.com/android/"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=$pkgname.install
source=("ftp://ftp.archlinux.org/other/community/ttf-droid/$pkgname.tar.xz")
sha256sums=('9fab382f034631a53bf58b00fa882ce5bddab98ee4aff67cc5dc18f131536ca0')

build() {
  cd "${srcdir}/${pkgname}"
  install -d "${pkgdir}/usr/share/fonts/TTF/"
  install -m0644 *.ttf "${pkgdir}/usr/share/fonts/TTF/"
}
