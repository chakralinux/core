#!/bin/sh

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  if [ "$(vercmp $2 2.2.0.3-12)" -le 0 ]; then
    cat << EOF
===> dkms startup config file moved to /etc/default/dkms
EOF
    fi
  post_install
}

post_install() {
  systemctl enable dkms.service
  systemctl start dkms.service
}
