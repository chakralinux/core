#!/bin/sh

sd_booted() {
  [ -e sys/fs/cgroup/systemd ]
}

post_install() {
  udevadm hwdb --update
  
  if sd_booted; then
    systemctl --system daemon-reexec
  fi

}

post_upgrade() {
  udevadm hwdb --update

  if sd_booted; then
    systemctl --system daemon-reexec
    systemctl restart systemd-logind.service
  fi

}

