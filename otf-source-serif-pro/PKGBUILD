# Maintainer: s8321414 <s8321414 at gmail.com>
# Arch Linux maintainers and contributors:
# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>
pkgname=otf-source-serif-pro
pkgver=2.007
_relver=2.007R-ro/1.007R-it
_tarver=${_relver//\//-}
pkgrel=1
pkgdesc="A set of serif OpenType fonts designed to complement Source Sans Pro"
arch=('any')
url="https://adobe-fonts.github.io/source-serif-pro/"
license=('custom')
depends=('fontconfig')
source=("${_tarver}.tar.gz::https://github.com/adobe-fonts/source-serif-pro/archive/${_relver}.tar.gz")
sha256sums=('8cc3c342fd783096711b7b73d9d4a63d6086f60ff3458dcb1913376ac44c9aeb')
 
package() {
  cd source-serif-pro-${_tarver}
  install -d "${pkgdir}/usr/share/fonts/OTF"
  install -t "${pkgdir}/usr/share/fonts/OTF" -m644 OTF/*.otf
  install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
