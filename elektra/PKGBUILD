# maintainer abveritas[at]chakra-project[dot]org>

pkgname=elektra
pkgver=0.7.2
pkgrel=1
pkgdesc="Elektra is a universal hierarchical configuration store"
url="http://www.libelektra.org/"
license="BSD"
arch=('x86_64')
depends=('libxml2')
makedepends=('docbook-xsl' 'texlive-latexextra')
source=("ftp://ftp.libelektra.org/elektra/releases/$pkgname-$pkgver.tar.gz")
md5sums=('29f14be7693ae627fb8cc30a079b10c9')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  
  ./configure --prefix=/usr --includedir=/usr/include/elektra --sysconfdir=/etc
  make
}

package() {
  cd ${srcdir}/$pkgname-$pkgver
  
  make DESTDIR=${pkgdir} install
}
