# $Id: PKGBUILD 63253 2010-01-16 20:47:31Z ibiru $
# Maintainer: Kevin <kevin@archlinux.org>
# Contributor: criminy <criminy@gmail.com>

pkgname=cairomm
pkgver=1.9.2
pkgrel=1
pkgdesc="C++ bindings to Cairo vector graphics library"
arch=('i686' 'x86_64')
url="http://www.cairographics.org"
license=('LGPL' 'MPL')
depends=('cairo>=1.10.0' 'libsigc++2.0>=2.2.3')
makedepends=('pkgconfig')
source=(http://www.cairographics.org/releases/${pkgname}-${pkgver}.tar.gz)
options=('!libtool' '!emptydirs')
md5sums=('24b0d35de4154195b8b78cf1f48b85e7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
