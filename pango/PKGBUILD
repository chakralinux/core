# Platform Packages for Chakra, part of chakra-project.org
#
# maintainer abveritas@chakra-project.org

pkgname=pango
pkgver=1.31.0
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('cairo' 'libxft' 'libthai' 'harfbuzz')
makedepends=('gobject-introspection' 'libxt' 'fontconfig')
options=('!libtool' '!emptydirs')
install=pango.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.31/${pkgname}-${pkgver}.tar.xz)
url="http://www.pango.org/"
sha256sums=('bac8eec76710150a6f7a40b565d8c7b0cfb946fa2879a19fae8f7563b551eb96')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --with-included-modules=basic-fc
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
