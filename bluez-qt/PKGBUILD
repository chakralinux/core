source ../frameworks.conf

pkgname=bluez-qt
pkgver=${KFVersion}
pkgrel=2
pkgdesc='Qt wrapper for Bluez 5 DBus API'
arch=('x86_64')
url='https://projects.kde.org/projects/kde/workspace/bluez-qt'
license=(GPL2)
depends=('qt5-declarative' 'bluez')
makedepends=('extra-cmake-modules')
groups=(kf5)
options=("debug")
source=("${KFServer}/${pkgname}-${pkgver}.tar.xz"{,.sig})
sha256sums=( $(getSum ${pkgname})
                        SKIP)
validpgpkeys=( ${KFvalidpgpkeys} )

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake_kf5 -DUDEV_RULES_INSTALL_DIR=/usr/lib/udev/rules.d ../${pkgname}-${pkgver}
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}

