# maintainer: Neophytos Kolokotronis <tetris4@gmail.com>

pkgname=dosfstools
pkgver=3.0.26
pkgrel=2
pkgdesc="DOS filesystem utilities."
arch=('x86_64')
depends=('glibc')
url="http://www.daniel-baumann.ch/software/dosfstools/"
license=('GPL2')
source=("http://www.daniel-baumann.ch/files/software/dosfstools/${pkgname}-${pkgver}.tar.xz")
md5sums=('45012f5f56f2aae3afcd62120b9e5a08')

build() {
  cd "${pkgname}-${pkgver}"
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR=$pkgdir PREFIX=/usr SBINDIR=/usr/bin MANDIR=/usr/share/man DOCDIR=/usr/share/doc install
}
