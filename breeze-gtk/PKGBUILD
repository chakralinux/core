source ../plasma.conf

pkgname=breeze-gtk
pkgver=${PVersion}
pkgrel=2
pkgdesc="Breeze port for GTK. (GIT version)"
arch=('x86_64')
url='https://quickgit.kde.org/?p=breeze-gtk.git'
license=('LGPL')
depends=('qt5-base')
optdepends=('gtk2: GTK+2 theme'
            'gtk3: GTK+3 theme')
makedepends=('git' 'cmake' 'extra-cmake-modules' 'gtk2')
conflicts=('gnome-breeze')
replaces=('gnome-breeze')
group=('gtk-integration') # groups=('plasma')
options=("debug")
source=("${PServer}/${pkgver}/${pkgname}-${pkgver}.tar.xz"
        'fix-breeze-dark.patch')
sha256sums=("$(getSum ${pkgname})"
            '6cb9ca054d618962ca9c0f982777e1f66d8d3cd219546927be615dce6060e0e7')

prepare() {
  mkdir -p build
  cd ${pkgname}-${pkgver}
  patch -p1 -i $srcdir/fix-breeze-dark.patch
}

build() {
  cd build
  cmake_kf5 ../${pkgname}-${pkgver}
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
} 
