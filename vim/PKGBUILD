prepare() {
  # Define the place for the global (g)vimrc file to /etc/vimrc
  sed -i 's|^.*\(#define SYS_.*VIMRC_FILE.*"\) .*$|\1|' $srcdir/$pkgbase/src/feature.h
  sed -i 's|^.*\(#define VIMRC_FILE.*"\) .*$|\1|' $srcdir/$pkgbase/src/feature.h
  cp -a $pkgbase{,-tiny}
}


build() {
# Build tiny version
  cd "$srcdir/$pkgbase-tiny/src"
  autoconf
  export CFLAGS="-g -O0"
  export CXXFLAGS="-g -O0"
  ./configure \
    --disable-gui \
    --disable-netbeans \
    --disable-pythoninterp \
    --disable-rubyinterp \
    --disable-acl \
    --disable-cscope \
    --disable-gpm \
    --disable-luainterp \
    --disable-multibyte \
    --disable-perlinterp \
    --disable-python3interp \
    --localstatedir=/var/lib/vim \
    --mandir=/usr/share/man \
    --prefix=/usr \
    --with-compiledby='Chakra' \
    --with-features=tiny \
    --with-tlib=ncurses \
    --with-x=no
  make

  # Build huge version
  cd "$srcdir/$pkgbase/src"
  autoconf
  export CFLAGS="-g -O0"
  export CXXFLAGS="-g -O0"
  ./configure \
    --disable-gui \
    --disable-netbeans \
    --disable-rubyinterp \
    --enable-acl \
    --enable-cscope \
    --enable-gpm \
    --enable-luainterp \
    --enable-multibyte \
    --enable-perlinterp \
    --enable-pythoninterp \
    --enable-python3interp \
    --localstatedir=/var/lib/vim \
    --mandir=/usr/share/man \
    --prefix=/usr \
    --with-compiledby='Chakra' \
    --with-features=huge \
    --with-tlib=ncurses \
    --with-x=yes
  make
}

