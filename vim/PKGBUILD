# source PKGBUILD && mksource
mksource() {
  [[ -x /usr/bin/hg ]] || (echo "hg not found - install mercurial." && return 1)

  __hgroot='http://vim.googlecode.com/hg/'
  __hgrepo='vim'
  __hgbranch='default'

  hg clone -b ${__hgbranch} -u ${__hgrev} "${__hgroot}${__hgrepo}" ${__hgrepo}

  pushd ${__hgrepo}
  if (( $(hg id -n) < $(hg id -nr ${__hgbranch}) )); then
    printf 'You are not building the latest revision!\n'
    printf "Consider updating __hgrev to $(hg id -r ${__hgbranch}).\n"
  fi
  popd

  mv vim ${pkgname}-${pkgver}
  find ${pkgname}-${pkgver} -depth -type d -name .hg -exec rm -rf {} \;
  rm ${pkgname}-${pkgver}/{.hgignore,.hgtags}
  tar -cJf ${pkgname}-${pkgver}.tar.xz ${pkgname}-${pkgver}/*
  rm -r ${pkgname}-${pkgver}

  #gpg --detach-sign ${pkgname}-${pkgver}.tar.xz

  #scp ${pkgname}-${pkgver}.tar.xz nym:/srv/ftp/other/vim/
  #scp ${pkgname}-${pkgver}.tar.xz.sig nym:/srv/ftp/other/vim/
}

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/src"

  # Define the place for the global (g)vimrc file to /etc/vimrc
  sed -i 's|^.*\(#define SYS_.*VIMRC_FILE.*"\) .*$|\1|' ${srcdir}/${pkgname}-${pkgver}/src/feature.h
  sed -i 's|^.*\(#define VIMRC_FILE.*"\) .*$|\1|' ${srcdir}/${pkgname}-${pkgver}/src/feature.h

  autoconf

  export CFLAGS="-g -O0"
  export CXXFLAGS="-g -O0"

  ./configure \
    --disable-gui \
    --disable-netbeans \
    --disable-pythoninterp \
    --enable-acl \
    --enable-cscope \
    --enable-gpm \
    --enable-luainterp \
    --enable-multibyte \
    --enable-perlinterp \
    --enable-python3interp \
    --enable-rubyinterp \
    --localstatedir=/var/lib/vim \
    --mandir=/usr/share/man \
    --prefix=/usr \
    --with-compiledby='Chakra' \
    --with-features=huge \
    --with-tlib=ncurses \
    --with-x=yes

  make
}

#check() {
