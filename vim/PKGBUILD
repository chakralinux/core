# source PKGBUILD && mksource
mksource() {
  [[ -x /usr/bin/hg ]] || (echo "hg not found - install mercurial." && return 1)

  __hgroot='http://vim.googlecode.com/hg/'
  __hgrepo='vim'
  __hgbranch='default'

  hg clone -b ${__hgbranch} -u ${__hgrev} "${__hgroot}${__hgrepo}" ${__hgrepo}

  pushd ${__hgrepo}
  if (( $(hg id -n) < $(hg id -nr ${__hgbranch}) )); then
    printf 'You are not building the latest revision!\n'
    printf "Consider updating __hgrev to $(hg id -r ${__hgbranch}).\n"
  fi
  popd

  mv vim ${pkgbase}-${pkgver}
  find ${pkgbase}-${pkgver} -depth -type d -name .hg -exec rm -rf {} \;
  rm ${pkgbase}-${pkgver}/{.hgignore,.hgtags}
  tar -cJf ${pkgbase}-${pkgver}.tar.xz ${pkgbase}-${pkgver}/*
  rm -r ${pkgbase}-${pkgver}

  #gpg --detach-sign ${pkgbase}-${pkgver}.tar.xz

  #scp ${pkgbase}-${pkgver}.tar.xz nym:/srv/ftp/other/vim/
  #scp ${pkgbase}-${pkgver}.tar.xz.sig nym:/srv/ftp/other/vim/
}

build() {
  cp -a ${pkgbase}-${pkgver} ${pkgbase}-${pkgver}-tiny

  # Build tiny version
  cd "${srcdir}/${pkgbase}-${pkgver}-tiny/src"
  # Define the place for the global (g)vimrc file to /etc/vimrc
  sed -i 's|^.*\(#define SYS_.*VIMRC_FILE.*"\) .*$|\1|' ${srcdir}/${pkgbase}-${pkgver}/src/feature.h
  sed -i 's|^.*\(#define VIMRC_FILE.*"\) .*$|\1|' ${srcdir}/${pkgbase}-${pkgver}/src/feature.h
  autoconf
  export CFLAGS="-g -O0"
  export CXXFLAGS="-g -O0"
  ./configure \
    --disable-gui \
    --disable-netbeans \
    --disable-pythoninterp \
    --disable-rubyinterp \
    --disable-acl \
    --disable-cscope \
    --disable-gpm \
    --disable-luainterp \
    --disable-multibyte \
    --disable-perlinterp \
    --disable-python3interp \
    --localstatedir=/var/lib/vim \
    --mandir=/usr/share/man \
    --prefix=/usr \
    --with-compiledby='Chakra' \
    --with-features=tiny \
    --with-tlib=ncurses \
    --with-x=no
  make

  # Build huge version
  cd "${srcdir}/${pkgbase}-${pkgver}/src"
  # Define the place for the global (g)vimrc file to /etc/vimrc
  sed -i 's|^.*\(#define SYS_.*VIMRC_FILE.*"\) .*$|\1|' ${srcdir}/${pkgbase}-${pkgver}/src/feature.h
  sed -i 's|^.*\(#define VIMRC_FILE.*"\) .*$|\1|' ${srcdir}/${pkgbase}-${pkgver}/src/feature.h
  autoconf
  export CFLAGS="-g -O0"
  export CXXFLAGS="-g -O0"
  ./configure \
    --disable-gui \
    --disable-netbeans \
    --disable-pythoninterp \
    --disable-rubyinterp \
    --enable-acl \
    --enable-cscope \
    --enable-gpm \
    --enable-luainterp \
    --enable-multibyte \
    --enable-perlinterp \
    --enable-pythoninterp \
    --enable-python3interp \
    --localstatedir=/var/lib/vim \
    --mandir=/usr/share/man \
    --prefix=/usr \
    --with-compiledby='Chakra' \
    --with-features=huge \
    --with-tlib=ncurses \
    --with-x=yes
  make
}

