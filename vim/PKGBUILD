pkgbase=vim
pkgname=('vim' 'vim-tiny' 'vim-runtime')
_topver=7-4
_patchlevel=417
_versiondir="vim${_topver//-/}"
pkgver=${_topver//-/.}.${_patchlevel}
pkgrel=1
arch=('x86_64')
license=('custom:vim')
