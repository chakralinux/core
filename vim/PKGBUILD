prepare() {
  cd vim-$pkgver/src
  # Define the place for the global vimrc file to /etc/vimrc
  sed -i 's|^.*\(#define SYS_.*VIMRC_FILE.*"\) .*$|\1|' feature.h
  sed -i 's|^.*\(#define VIMRC_FILE.*"\) .*$|\1|' feature.h

  autoconf

  cd "$srcdir"
  for pkg in ${pkgname[@]}
  do
    cp -a vim-$pkgver ${pkg}-build
  done
}


build() {
  cd "$srcdir"/$pkgbase-runtime-build

  ./configure \
    --prefix=/usr \
    --localstatedir=/var/lib/vim \
    --with-compiledby='Chakra' \
    --with-features=huge \
    --enable-acl \
    --enable-cscope \
    --enable-gpm \
    --disable-gui \
    --disable-luainterp \
    --enable-multibyte \
    --disable-netbeans \
    --enable-perlinterp \
    --disable-python3interp \
    --disable-pythoninterp \
    --disable-rubyinterp \
    --with-x=no
  make

  cd "$srcdir"/$pkgbase-tiny-build

  ./configure \
    --prefix=/usr \
    --localstatedir=/var/lib/vim \
    --with-compiledby='Chakra' \
    --with-features=tiny \
    --disable-acl \
    --disable-cscope \
    --enable-gpm \
    --disable-gui \
    --disable-luainterp \
    --disable-multibyte \
    --disable-netbeans \
    --disable-perlinterp \
    --disable-python3interp \
    --disable-pythoninterp \
    --disable-rubyinterp \
    --with-x=no
  make

  cd "$srcdir"/$pkgbase-build

  ./configure \
    --prefix=/usr \
    --localstatedir=/var/lib/vim \
    --with-compiledby='Chakra' \
    --with-features=huge \
    --disable-gui \
    --enable-acl \
    --enable-cscope \
    --enable-gpm \
    --enable-luainterp \
    --enable-multibyte \
    --enable-netbeans \
    --enable-perlinterp \
    --enable-pythoninterp \
    --disable-python3interp \
    --enable-rubyinterp \
    --with-x=yes
  make

  cd "$srcdir"/$pkgbase-python3-build

  ./configure \
    --prefix=/usr \
    --localstatedir=/var/lib/vim \
    --with-compiledby='Chakra' \
    --with-features=huge \
    --disable-gui \
    --enable-acl \
    --enable-cscope \
    --enable-gpm \
    --enable-luainterp \
    --enable-multibyte \
    --enable-netbeans \
    --enable-perlinterp \
    --disable-pythoninterp \
    --enable-python3interp \
    --enable-rubyinterp \
    --with-x=yes
  make
}

