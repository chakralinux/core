    pkgdesc="Python 2.x bindings for QScintilla2"
    depends=('python-qscintilla-qt4-common' 'python2-pyqt4')
    replaces=('python2-qscintilla<2.8.3')
    conflicts=('python2-qscintilla<2.8.3')
