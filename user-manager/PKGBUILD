# Contributor: Andrea Scarpino <andrea@archlinux.org>

source ../plasma.conf

pkgname=user-manager
pkgver=${PVersion}
pkgrel=2
pkgdesc="KDE's user manager"
arch=('x86_64')
url='projects.kde.org/'
license=('LGPL')
depends=(accountsservice libpwquality kio)
makedepends=(extra-cmake-modules python3 kcmutils)
checkdepends=("cmake")
groups=('plasma')
options=("debug")
source=("${PServer}/${pkgver}/${pkgname}-${PVersion}.tar.xz"{,.sig})
sha256sums=( $(getSum ${pkgname}) 
             'SKIP' )
validpgpkeys=(${Pvalidpgpkeys[@]})

prepare() {
  mkdir -p build

  cd ${pkgname}-${pkgver}
}

build() {
  cd build
  cmake_kf5 ../${pkgname}-${pkgver} \
    -DPYTHON_EXECUTABLE=/usr/bin/python3
  make
}

check() {
  cd build
  make test || return 0
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
