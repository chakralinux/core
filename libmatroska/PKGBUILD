#contributions from Arch: https://projects.archlinux.org/svntogit/packages.git/tree/trunk?h=packages/libmatroska

pkgname=libmatroska
pkgver=1.4.4
pkgrel=1
pkgdesc="Matroska library"
arch=('x86_64')
url="http://dl.matroska.org/downloads/libmatroska/"
license=('LGPL')
depends=('libebml')
source=("http://dl.matroska.org/downloads/libmatroska/${pkgname}-${pkgver}.tar.bz2")
md5sums=('6a8e4528f713ec33faf4d793e61f883c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --disable-static

  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make prefix="${pkgdir}/usr" install
}

