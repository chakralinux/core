pkgname=gst-python
pkgver=1.4.0
pkgrel=1
pkgdesc="Python bindings for GStreamer 0.10"
arch=('x86_64')
license=('LGPL')
url="http://gstreamer.freedesktop.org/"
depends=('python2-gobject' 'gstreamer')
makedepends=('pkgconfig')
source=(http://gstreamer.freedesktop.org/src/gst-python/gst-python-${pkgver}.tar.xz)
sha256sums=('b1e40c29ceb41b03f08d38aca6056054f0341d0706276326dceeec6ac8d53d3e')

build() {
  cd "${srcdir}/gst-python-${pkgver}"
  ./configure --prefix=/usr 
  make 
}

package() {
  cd "${srcdir}/gst-python-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
