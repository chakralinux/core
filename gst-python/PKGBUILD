pkgname=gst-python
pkgver=1.2.1
pkgrel=1
pkgdesc="Python bindings for GStreamer 0.10"
arch=('x86_64')
license=('LGPL')
url="http://gstreamer.freedesktop.org/"
depends=('python2-gobject' 'gstreamer')
makedepends=('pkgconfig')
options=('!libtool')
source=("http://gstreamer.freedesktop.org/src/gst-python/gst-python-${pkgver}.tar.bz2")
sha256sums=('8823e5a9ffc51212df412652da44dc3f2a0e23295da769de2d111c770280efd4')

build() {
  cd "${srcdir}/gst-python-${pkgver}"
  ./configure --prefix=/usr 
  make 
}

package() {
  cd "${srcdir}/gst-python-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
